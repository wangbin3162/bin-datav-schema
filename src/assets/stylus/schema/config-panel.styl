.config-panel-wp {
  position: relative;
  z-index: 90;
  overflow: hidden;
  width: var(--schema-options-width);
  height: 100%;
  background: var(--schema-color-bg-dark);
  box-shadow: -1px 0 #000;
  transition: width .25s ease-in-out;
  .config-panel {
    width: var(--schema-options-width);
    height: 100%;
    background: var(--schema-color-bg-dark);
    transition: .25s ease-in-out;
    user-select: none;
  }
  &.is-hide {
    width: 0;
    .config-panel {
      transform: translateX(100%);
    }
  }
}

// 页面配置面板
.page-config-panel {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  .page-config-top {
    width: 100%;
    height: 30px;
    font-size: 12px;
    line-height: 30px;
    text-align: center;
    background: var(--schema-color-bg-light);
    user-select: none;
  }
  .page-config-content {
    overflow-y: auto;
    overflow-x: hidden;
    height: calc(100% - 30px);
  }
}
