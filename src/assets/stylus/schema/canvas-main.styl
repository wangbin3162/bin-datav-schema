// main
.edit-main-wp {
  position: relative;
  z-index: 2;
  height: 100%;
  overflow: hidden;
  flex-direction: column;
  flex: 1;
}

// toolbox
.toolbox-panel-wp {
  position: relative;
  height: 40px;
  z-index: 10;
  transition: height 0.2s ease;
  border-bottom: 1px solid #000;
  flex-shrink: 0;
  .toolbox-panel {
    background: #191c21;
    padding: 8px 24px;
    height: 100%;
    display: flex;
    align-items: center;
    .btn-box {
      display: flex;
      align-items: center;
      margin-left: 12px;
    }
  }
  &.is-hide {
    height: 0;
    overflow: hidden;
    border-bottom: none;
  }
}
// footer
.footer-panel {
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 99;
  display: flex;
  width: 100%;
  height: 32px;
  background: #222528;
  box-shadow: 0 -1px #000;
  user-select: none;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  .screen-info {
    > span {
      font-size: 12px;
    }
  }
  .scale-input-wp {
    position: relative;
    display: block;
    width: 58px;
    height: 20px;
    line-height: 18px;
    margin-left: 20px;
    margin-right: 20px;
    overflow: hidden;
    cursor: pointer;
    background: #262c33;
    border: 1px solid #0b0c0d;
    .scale-input {
      width: 27px;
      padding-left: 5px;
      font-size: 12px;
      color: #bcc9d4;
      text-align: right;
      background: transparent;
      caret-color: #bcc9d4;
      outline: 0;
      border: 0;
    }
    .percent {
      margin-left: 1px;
      color: #bcc9d4;
    }
    .b-iconfont {
      font-size: 12px;
      margin-left: 2px;
      color: #bcc9d4;
    }
  }
  .scale-slider-wp {
    width: 190px;
  }
}
// canvas-main
.canvas-main {
  position: relative;
  display: flex;
  height: 100%;
  padding: 0;
  user-select: none;
  flex: 1;
  .canvas-panel-wrap {
    position: relative;
    width: 100%;
    height: calc(100% - 32px);
    overflow: auto;
    hideScrollBar()
    .canvas-panel {
      top: 60px;
      left: 60px;
      background-position: center, right bottom;
      background-repeat: no-repeat, no-repeat;
      background-size: cover, contain;
      box-shadow: 0 0 30px 0 rgba(0, 0, 0, .5);
      transition: 0.2s all ease-in-out;
      transform-origin: 0 0;
    }
  }
}
